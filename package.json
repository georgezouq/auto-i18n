{
  "name": "auto-i18n-cli",
  "version": "0.1.0",
  "description": "JS国际化辅助工具，自动替换中文并翻译，支持 react、vue，react-intl、react-i18next 等",
  "bin": {
    "auto-i18n": "./bin/replace.js"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint --ext .js test/ src/ bin/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "node script/verify-commit.js",
      "pre-push": "npm test"
    }
  },
  "keywords": [
    "vue",
    "react",
    "i18n",
    "jsx"
  ],
  "license": "MIT",
  "dependencies": {
    "axios": "^0.20.0",
    "md5": "^2.3.0",
    "progress": "^2.0.3"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2"
  }
}
